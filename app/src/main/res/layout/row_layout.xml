<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/watchPasswordDetails"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_marginBottom="3dp"--><!--android:layout_marginLeft="4dp"--><!--android:layout_marginRight="4dp"--><!--android:descendantFocusability="blocksDescendants"--><!--android:layout_marginTop="3dp"--><!--android:orientation="vertical">-->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp"
    android:background="#f1f1f1"
    android:clickable="true"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgAccount"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_account_circle_black_48dp" />

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imgAccount"
            android:layout_toRightOf="@+id/imgAccount"
            android:gravity="left"
            android:text=""
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/serviceName"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/serviceName"
            android:gravity="left"
            android:text=""
            android:textColor="#000000"
            android:textSize="17dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

